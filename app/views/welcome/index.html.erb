<%= render "shared/slider" %>
<%= render "shared/filter" %>
				<div class="col-sm-9 padding-right">
					<div class="features_items"><!--features_items-->
						<h2 class="title text-center">Features Items</h2>
						<% @featured_products.each do |product| %>
							<div class="col-sm-4">
								<div class="product-image-wrapper">
									<div class="single-products">
											<div class="productinfo text-center">
												<%= link_to image_tag(product.featured_image), product_path(product), title: product.name, class:  'clearfix' %>
												<p><%= product.name%></p>
												<h2> <%= product.variants.first.price.to_i %> </h2>
												<p><%= link_to product.name,product_path(product)%></p>
											</div>
											<div class="product-overlay">
												<div class="overlay-content">
												<%= link_to image_tag(product.featured_image), product_path(product), title: product.name, class:  'clearfix' %>
												<h2> <%= product.variants.first.price.to_i %> </h2>
												<p><%= link_to product.name,product_path(product)%></p>
												</div>

											</div>
									</div>
									<div class="choose">
										<ul class="nav nav-pills nav-justified">
								 <% if user_signed_in? %>
								<li>											
								<%= link_to '<i class="fa fa-plus-square"></i> Add to Wishlistttttt'.html_safe, {:controller => "wishlists", 
								                       :action => "create", 
								                       :user_id => current_user.id, 
								                       :product_id => product.id},
								                       :method => "post" %>
								</li>
								<% end %>
											<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
										</ul>
									</div>
								</div>
							</div>
						<%end%>
					</div><!--features_items-->
					
					<%= render 'shared/category'%>
					<%= render 'shared/recommendation'%>					
				</div>
			</div>
		</div>
	</section>
